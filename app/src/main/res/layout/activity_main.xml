<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GLSURFACEVIEW"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="GLSURFACEVIEW" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView" />

    <RelativeLayout
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="206dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="MOVIENDO FORMAS"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:text="MOVIENDO FORMAS" />

    <Button
        android:id="@+id/btn_dr"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="DR"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_iz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btn_ab"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="AB"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_at"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_ar"
        app:layout_constraintTop_toTopOf="@+id/btn_ar"
        tools:text="AB" />

    <Button
        android:id="@+id/btn_at"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="AT"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_de"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_ab"
        app:layout_constraintTop_toTopOf="@+id/btn_ab"
        tools:text="AT" />

    <Button
        android:id="@+id/btn_de"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="DE"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_at"
        app:layout_constraintTop_toTopOf="@+id/btn_at"
        tools:text="DE" />

    <Button
        android:id="@+id/btn_iz"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="IZ"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_ar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_dr"
        app:layout_constraintTop_toTopOf="@+id/btn_dr"
        tools:text="IZ" />

    <Button
        android:id="@+id/btn_ar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="AR"
        app:layout_constraintEnd_toStartOf="@+id/btn_ab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_iz"
        app:layout_constraintTop_toTopOf="@+id/btn_iz"
        tools:text="AR" />

</android.support.constraint.ConstraintLayout>